---
import Layout from '../layouts/Layout.astro';
import Navbar from '../components/Navbar.astro';
import Footer from '../components/Footer.astro';
---

<Layout 
  title="Page Not Found - YouTube Content Ideas"
  description="The page you're looking for doesn't exist. Discover trending YouTube content ideas across 60+ niches for creators."
>
  <Navbar />
  
  <main class="flex-1 flex items-center justify-center py-12 px-4">
    <div class="text-center max-w-2xl mx-auto">
      <div class="mb-8">
        <h1 class="text-9xl font-bold text-muted-foreground mb-4">404</h1>
        <h2 class="text-3xl font-bold text-foreground mb-4">Page Not Found</h2>
        <p class="text-lg text-muted-foreground mb-8">
          Oops! The page you're looking for doesn't exist. But don't worry, we have plenty of 
          amazing YouTube content ideas waiting for you!
        </p>
      </div>
      
      <div class="space-y-4">
        <div class="flex flex-col sm:flex-row gap-4 justify-center">
          <a 
            href="/" 
            class="inline-flex items-center justify-center rounded-md bg-primary text-primary-foreground px-6 py-3 text-sm font-medium hover:bg-primary/90 transition-colors"
          >
            Browse Content Ideas
          </a>
          <a 
            href="/niches" 
            class="inline-flex items-center justify-center rounded-md border border-input bg-background px-6 py-3 text-sm font-medium hover:bg-accent hover:text-accent-foreground transition-colors"
          >
            Explore Niches
          </a>
        </div>
        
        <p class="text-sm text-muted-foreground mt-6">
          Or try searching for something specific on our 
          <a href="/" class="text-primary hover:underline">homepage</a>
        </p>
      </div>
    </div>
  </main>
  
  <Footer />
</Layout>