---
import Layout from '../layouts/Layout.astro';
import Navbar from '../components/Navbar.astro';
import Footer from '../components/Footer.astro';
import MainContent from '../components/MainContent';
import { contentIdeas } from '../data/contentIdeas';
import { categories } from '../data/categories';
---

<Layout 
  title="YouTube Content Ideas - Trending Video Ideas for Creators"
  description="Discover trending YouTube content ideas across 60+ categories. Find fresh video concepts for challenges, tutorials, reviews, vlogs and more to grow your channel."
>
  <Navbar />
  <MainContent contentIdeas={contentIdeas} categories={categories} client:load />
  <Footer />
</Layout>