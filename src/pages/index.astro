---
import Layout from '../layouts/Layout.astro';
import Navbar from '../components/Navbar.astro';
import Footer from '../components/Footer.astro';
import Hero from '../components/Hero';
import HomePreview from '../components/HomePreview';
import MainContent from '../components/MainContent';
import { niches } from '../data/niches';
import { contentIdeas } from '../data/niches';
---

<Layout 
  title="YouTube Content Ideas - Trending Video Ideas for Creators"
  description="Discover trending YouTube content ideas across 60+ niches. Find fresh video concepts for challenges, tutorials, reviews, vlogs and more to grow your channel."
  tags={["YouTube content ideas", "video ideas", "content creation", "YouTube creators", "trending videos", "viral content", "YouTube niche ideas"]}
>
  <Navbar />
  <main>
    <Hero totalIdeas={contentIdeas.length} client:load />
    <HomePreview client:load />
  </main>
  <Footer />
</Layout>