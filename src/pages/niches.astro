---
import Layout from '../layouts/Layout.astro';
import Navbar from '../components/Navbar.astro';
import Footer from '../components/Footer.astro';
import NichesGrid from '../components/NichesGrid';
import { Input } from '../components/ui/input';
import { niches, getParentNiche } from '../data/niches';
---

<Layout 
  title="YouTube Content Niches - 72 Niches for Video Ideas (Free)"
  description="Explore 72 YouTube content niches from Gaming to DIY to Food. Find your niche with organized video ideas to grow your channel audience."
  tags={["YouTube niches", "content niches", "video categories", "YouTube creators", "niche ideas", "content creation", "YouTube content"]}
>
  <Navbar />
  
  <main>
    <section class="relative py-20 md:py-28">
      <div class="container">
        <div class="mx-auto max-w-4xl text-center">
          <h1 class="text-4xl font-bold tracking-tight sm:text-6xl lg:text-7xl">
            All Niches
          </h1>
          <p class="mt-6 text-lg leading-8 text-muted-foreground max-w-2xl mx-auto">
            Discover content ideas across all {niches.length} niches. Each niche contains 
            curated video ideas to help grow your YouTube channel.
          </p>
          
          <div class="mt-10 max-w-md mx-auto">
            <div class="relative">
              <svg class="absolute left-3 top-1/2 h-4 w-4 -translate-y-1/2 text-muted-foreground" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></path>
              </svg>
              <Input
                type="text"
                id="searchInput"
                placeholder="Search niches..."
                className="pl-10 h-12 text-base"
              />
            </div>
          </div>
        </div>
      </div>
    </section>
    
    <section class="py-16">
      <div class="container">
        <div id="nichesGrid" class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-6">
          {niches.map((niche) => {
            const parentNiche = getParentNiche(niche.id);
            return (
              <div data-name={niche.name.toLowerCase()} data-description={niche.description.toLowerCase()}>
                <a href={`/niche/${niche.slug}/`} class="group">
                  <div class="h-full transition-all duration-200 hover:shadow-lg hover:-translate-y-1 group-hover:border-primary/50 rounded-lg border bg-card text-card-foreground shadow-sm">
                  <div class="flex flex-col space-y-1.5 p-6 pb-3">
                    <div class="flex items-center justify-between mb-2">
                      {parentNiche ? (
                        <span class="inline-flex items-center rounded-full border px-2.5 py-0.5 text-xs font-semibold transition-colors focus:outline-none focus:ring-2 focus:ring-ring focus:ring-offset-2 text-foreground">
                          {parentNiche.name}
                        </span>
                      ) : (
                        <span class="inline-flex items-center rounded-full border px-2.5 py-0.5 text-xs font-semibold transition-colors focus:outline-none focus:ring-2 focus:ring-ring focus:ring-offset-2 border-transparent bg-secondary text-secondary-foreground hover:bg-secondary/80">
                          {niche.name}
                        </span>
                      )}
                    </div>
                    <h3 class="text-lg font-semibold leading-none tracking-tight group-hover:text-primary transition-colors">
                      {niche.name}
                    </h3>
                  </div>
                  <div class="p-6 pt-0">
                    <p class="text-sm text-muted-foreground leading-relaxed">
                      {niche.description}
                    </p>
                  </div>
                </div>
              </a>
              </div>
            );
          })}
        </div>
        
        <!-- No Results Message -->
        <div id="noResults" class="hidden text-center py-12">
          <h3 class="text-xl text-muted-foreground mb-4">No niches found</h3>
          <p class="text-muted-foreground">Try adjusting your search criteria</p>
        </div>
      </div>
    </section>
  </main>
  
  <Footer />

  <script>
    // Search functionality
    const searchInput = document.getElementById('searchInput') as HTMLInputElement;
    const nichesGrid = document.getElementById('nichesGrid') as HTMLElement;
    const noResults = document.getElementById('noResults') as HTMLElement;

    function filterNiches() {
      const searchTerm = searchInput.value.toLowerCase();
      const nicheCards = nichesGrid.querySelectorAll('[data-name]') as NodeListOf<HTMLElement>;
      let visibleCount = 0;

      nicheCards.forEach(card => {
        const name = card.getAttribute('data-name') || '';
        const description = card.getAttribute('data-description') || '';

        const matchesSearch = !searchTerm || 
          name.includes(searchTerm) || 
          description.includes(searchTerm);

        if (matchesSearch) {
          card.style.display = 'block';
          visibleCount++;
        } else {
          card.style.display = 'none';
        }
      });

      if (visibleCount === 0) {
        noResults.classList.remove('hidden');
        nichesGrid.classList.add('hidden');
      } else {
        noResults.classList.add('hidden');
        nichesGrid.classList.remove('hidden');
      }
    }

    searchInput.addEventListener('input', filterNiches);
  </script>
</Layout>